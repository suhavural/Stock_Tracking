@using mvcstokk.Models.Entity;
@model List<kategoriler>
@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
    .kategori-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        margin: 30px auto;
        max-width: 1400px;
    }

    .kategori-header {
        text-align: center;
        color: white;
        margin-bottom: 30px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .kategori-header h2 {
        font-size: 2.5em;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        margin-bottom: 10px;
    }

    .kategori-header p {
        font-size: 1.1em;
        opacity: 0.9;
    }

    .table-container {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .styled-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
    }

    .styled-table thead tr {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-align: left;
        font-weight: bold;
    }

    .styled-table th {
        padding: 18px 15px;
        font-size: 1.1em;
        letter-spacing: 0.5px;
    }

    .styled-table tbody tr {
        border-bottom: 1px solid #f0f0f0;
        transition: all 0.3s ease;
    }

    .styled-table tbody tr:hover {
        background-color: #f8f9ff;
        transform: scale(1.02);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.2);
    }

    .styled-table tbody tr:last-of-type {
        border-bottom: none;
    }

    .styled-table td {
        padding: 15px;
        font-size: 1em;
    }

    .kategori-id {
        font-weight: bold;
        color: #667eea;
        font-size: 1.2em;
    }

    .kategori-name {
        font-weight: 600;
        color: #333;
    }

    .btn-action {
        padding: 8px 20px;
        border-radius: 25px;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        margin: 0 5px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

    .btn-delete {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        color: white;
    }

    .btn-delete:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(238, 90, 111, 0.4);
        color: white;
    }

    .btn-update {
        background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);
        color: white;
    }

    .btn-update:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(86, 171, 47, 0.4);
        color: white;
    }

    .btn-add {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 15px 40px;
        border-radius: 30px;
        font-size: 1.2em;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        margin-top: 30px;
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    }

    .btn-add:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 30px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .btn-container {
        text-align: center;
    }

    .empty-state {
        text-align: center;
        padding: 60px;
        color: #999;
        font-size: 1.2em;
    }

    .empty-state i {
        font-size: 4em;
        margin-bottom: 20px;
        opacity: 0.3;
    }

    .styled-table tbody tr {
        animation: fadeIn 0.5s ease;
    }

    .stats-badge {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.9em;
        margin-left: 10px;
        font-weight: bold;
    }
</style>

<div class="kategori-container">
    <div class="kategori-header">
        <h2>📂 Kategori Yönetimi</h2>
        <p>
            Tüm kategorilerinizi buradan yönetin
            @if (Model != null && Model.Any())
            {
                <span class="stats-badge">@Model.Count Kategori</span>
            }
        </p>
    </div>

    <div class="table-container">
        @if (Model != null && Model.Any())
        {
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>KATEGORİ ADI</th>
                        <th style="text-align: center;">İŞLEMLER</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ktgr in Model)
                    {
                        <tr>
                            <td class="kategori-id">#@ktgr.KATEGORİID</td>
                            <td class="kategori-name">@ktgr.KATEGORİAD</td>
                            <td style="text-align: center;">
                                <a href="/kategori/KategoriGetir/@ktgr.KATEGORİID"
                                   class="btn-action btn-update">
                                    ✏️ Güncelle
                                </a>
                                <a href="/kategori/SİL/@ktgr.KATEGORİID"
                                   class="btn-action btn-delete"
                                   onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?')">
                                    🗑️ Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i>📭</i>
                <p>Henüz kategori bulunmuyor</p>
            </div>
        }
    </div>

    <div class="btn-container">
        <a href="/kategori/YeniKategori/" class="btn-add">
            ➕ Yeni Kategori Ekle
        </a>
    </div>
</div>